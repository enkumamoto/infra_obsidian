resource "aws_rds_cluster" "cluster" {
  cluster_identifier      = "obsidian-cluster-${var.environment}"
  database_name           = "${var.db_name}-${var.environment}"
  master_username         = var.db_user_name
  master_password         = var.db_password
  engine                  = var.db_engine
  engine_version          = var.db_engine_version
  availability_zones      = aws_subnet.obsidian_database_subnet.*.availability_zone
  backup_retention_period = 5
  preferred_backup_window = "07:00-09:00"
  skip_final_snapshot     = true
  vpc_security_group_ids  = [aws_security_group.default.id]
  db_subnet_group_name    = aws_db_subnet_group.obsidian_db_subnet_gruop.name

  tags = {
    Environment = var.environment
  }
}
